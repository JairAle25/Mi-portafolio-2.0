---
import Button from "./Button.astro"
import Links from "../constants/LinksHeader.js"
---

<header class="flex items-center text-lg justify-around py-4 fixed w-full xl:py-6 xl:justify-center" id="inicio">
    <img src="/logoFooter.png" alt="" class="xl:hidden md:w-[7%] w-[9%]">
    <i class="bi bi-list text-3xl block cursor-pointer xl:hidden md:text-4xl"></i>
    <nav class="xl:flex xl:gap-10 xl:items-center hidden">
        {Links.slice(0, -1).map(link=><a href={link.link} class="transition-all hover:text-slate-300">{link.name}</a>)}
        <Button text={Links[Links.length - 1].name} link={Links[Links.length - 1].link}></Button>
    </nav>
</header>