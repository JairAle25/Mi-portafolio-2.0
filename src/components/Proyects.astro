---
import proyects from "../constants/Proyects.js"
import ItemProyects from "./ItemProyects.astro"
---

<section class="mt-56 my-0 mx-auto w-[65%] scrollLink" id="proyectos">
    <h1 class="font-bold text-4xl pb-10"><i class="bi bi-briefcase-fill"></i> Proyectos</h1>
    <div class="overflow-x-auto">
        <div class="flex justify-start items-center">
            {proyects.map(proy => <ItemProyects title={proy.title} description={proy.description} tags={proy.technologies} urlImage={proy.urlImage}/>)}
        </div>
    </div>
</section>