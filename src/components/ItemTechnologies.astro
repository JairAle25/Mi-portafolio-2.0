---
    const {url,name} = Astro.props
---

<div class="w-[10%] text-center py-4 px-4 rounded-md div min-w-40">
    <img src={url} alt="" class="">
    <p class="pt-3 text-lg font-bold opacity-0 transition-all duration-300">{name}</p>
</div>

<style>
    .div:hover p {
        opacity: 1;
    }
</style>