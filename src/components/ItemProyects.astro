---
import Pill from "./Pill.astro";
const {title,description,tags,urlImage,linkPagina,linkRepo} = Astro.props;
const classNameLinks = "border border-gray-500 rounded-xl px-3 py-1 transition-all duration-2 hover:bg-[#181818]"
---

<div class="flex flex-col w-[65%] min-w-[65%]">
    <h1 class="text-3xl text-[var(--colorPrincipal)] font-bold">{title}</h1>
    <p class="text-base py-2">{description}</p>
    <div class="grid grid-cols-4 gap-4 place-items-center mb-3">
        {tags.map(tag => <Pill className={tag.className} url={tag.url} name={tag.name}/>)}
    </div>
    <img src={urlImage} alt="" class="rounded-lg">
    <div class="flex justify-center items-center gap-4 mt-3">
        <a href={linkRepo} class={classNameLinks} target="_blank"><i class="bi bi-github"></i> Repositorio</a>
        <a href={linkPagina} class={classNameLinks} target="_blank"><i class="bi bi-browser-firefox text-[#ce6b28]"></i> Pagina</a>
    </div>
</div>