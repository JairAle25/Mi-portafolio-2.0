---
import Pill from "./Pill.astro";
const {title,description,tags,urlImage} = Astro.props;
---

<div class="flex flex-col justify-center items-start w-[50%]">
    <h1 class="text-3xl text-[var(--colorPrincipal)] font-bold">{title}</h1>
    <p class="text-base">{description}</p>
    <div class="flex justify-start items-center">
        {tags.map(tag => <Pill className={tag.className} url={tag.url} name={tag.name}/>)}
    </div>
    <img src={urlImage} alt="">
</div>