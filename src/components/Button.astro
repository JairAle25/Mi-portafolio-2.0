---
const { text,link,tipo } = Astro.props;
let sizeLetra;
if(tipo=="header"){
    sizeLetra="text-lg"
}
else{
    sizeLetra="text-sm"
}
---

<a href={link} class=`bg-[var(--colorPrincipal)] px-6 py-2 rounded-lg transition-all duration-500 hover:bg-[var(--hoverColorPrincipal)] cursor-pointer ${sizeLetra} xl:text-lg md:text-xl`>{text}</a>

